{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2020"
    ],
    "outDir": "./.build",
    "noImplicitAny": true,
    "declaration": true,
    "module": "es2022",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}